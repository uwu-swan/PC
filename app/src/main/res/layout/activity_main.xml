<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151c36"
    tools:context=".MainActivity">

    <!-- Заголовок для сегодняшнего праздника -->
    <TextView
        android:id="@+id/todayHolidayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:text="Сегодняшний праздник"
        android:textColor="#fff8e6"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Разделительная линия -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#485778"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/todayHolidayTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Заголовок для ближайших праздников -->
    <TextView
        android:id="@+id/upcomingHolidaysTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:gravity="start"
        android:lineSpacingExtra="12dp"
        android:lineSpacingMultiplier="1.3"
        android:text="Ближайшие праздники"
        android:textColor="#fbdcc4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todayHolidayTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
